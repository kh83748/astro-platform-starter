---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = `
<form action="https://track.bentonow.com/forms/8f28c1cd2bfd077058022580a1637933/$subscribe?hardened=true" method="POST" enctype="multipart/form-data" class="bento-formkit" id="bento-formkit-phkfggxf">
<div class="bento-formkit-headline">Sign Up Now</div><div class="bento-formkit-subheader">Join our mailing list for updates</div><input type="hidden" name="redirect" value="https://keith-howard.com/thank-you">
<input type="text" name="fields_first_name" class="bento-formkit-input" placeholder="First Name" required="">
<input type="email" name="email" placeholder="Email" class="bento-formkit-input" required="" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+.[a-z]{2,}$">
<div class="bento-formkit-question">How would you describe yourself? *required</div>
<div class="bento-formkit-input">
<input type="radio" name="job_title" value="Copywriter" required> Copywriter<br>
<input type="radio" name="job_title" value="agency_owner_cmo"> Agency Owner / CMO<br>
<input type="radio" name="job_title" value="founder_csuite_exec"> Founder / C-Suite Exec<br>
<input type="radio" name="job_title" value="absolute_legend"> Absolute Legend<br>
</div>
<button type="submit" class="bento-formkit-button">Subscribe</button>
<div class="bento-formkit-disclosure">By signing up, you agree to our Privacy Policy and Terms of Service. We may send you occasional newsletters and promotional emails about our products and services. You can opt-out at any time.</div></form>
<style>#bento-formkit-phkfggxf { width: 100% !important; line-height:24px !important; max-width: 100% !important; box-sizing: border-box !important; padding: 20px !important; border-radius: 12px !important; background: #fff !important; border: 2px solid rgba(0, 0, 0, 0.15) !important; box-shadow: 0 1px 2px 0 rgba(0,0,0,0.1) !important; font-family: gs-inter-2020-11, 'Helvetica Neue', Helvetica, Arial, sans-serif !important; position: relative !important;}.bento-formkit-headline { font-size: 18px !important; font-weight: bold !important; color: #333 !important; }.bento-formkit-subheader { font-size: 16px !important; color: #666 !important; }#bento-formkit-phkfggxf input[type="text"], #bento-formkit-phkfggxf input[type="email"], #bento-formkit-phkfggxf input[type="password"], #bento-formkit-phkfggxf input[type="number"], #bento-formkit-phkfggxf input[type="date"], #bento-formkit-phkfggxf input[type="range"] { display: block !important; width: 100% !important; background-color: #fff !important; border-radius: 12px !important; border: 1px solid #ccc !important; color: #333 !important; cursor: text !important; margin: 8px 0 12px !important; padding: 6px 12px !important; box-sizing: border-box !important; font-size: 16px !important;}#bento-formkit-phkfggxf input:focus:valid { border-color: green !important; }#bento-formkit-phkfggxf input:focus:invalid { border-color: red !important; }#bento-formkit-phkfggxf button { text-align: center !important; background-color: #0095FF !important; font-weight: 800 !important; color: white !important; padding: 6px 12px !important; margin: 0px 0 0 !important; border: none !important; cursor: pointer !important; width: 100% !important; border-radius: 12px !important; box-sizing: border-box !important; box-shadow: 0 4px 12px 0 rgba(0,0,0,0.1) !important; font-size: 16px !important; border: 1px solid #0095FF} .bento-formkit-disclosure { font-size: 12px !important;color: #666 !important;margin-top: 10px !important;} .bento-formkit-question { font-size: 16px !important; color: #333 !important; margin: 12px 0 8px !important; } #bento-formkit-phkfggxf input[type="radio"] { margin: 8px 0 !important; accent-color: #0095FF; }</style>
`;

<Layout title="Keith's Email List">
    <ContextAlert class="mb-4" />
    <h1 class="mb-10 text-center">KEITH HOWARD'S EMAIL LIST</h1>
    <Markdown content={explainer} class="text-lg mb-10" />
</Layout>
